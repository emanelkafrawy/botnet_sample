@model Item
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Item</h2>
            <hr />
        </div>
        @*to appear above with all errors*@
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            @*asp-for: Model entiy*@
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
            @*<span asp-validation-for="Name" class="text-danger"></span>*@
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control" />
            @*<span asp-validation-for="Price" class="text-danger"></span>*@
        </div>
        <div class="mb-3">
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" disabled class="form-control" asp-items="@ViewBag.Categoriylist" asp-validation-for="CategoryId">
            </select>
        </div>
        <br />
        <hr />
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-action="Index" asp-controller="Items" class="btn btn-secondary" style="width:150px">
            back to items
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}